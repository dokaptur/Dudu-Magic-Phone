<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dudroid.dudumagicphone"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera.flash" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:name="dudroid.dudumagicphone.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/agik_czarodziej"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="dudroid.dudumagicphone.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="dudroid.dudumagicphone.CreateSpellActivity"
            android:label="@string/title_activity_create_spell"
            android:parentActivityName="dudroid.dudumagicphone.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="dudroid.dudumagicphone.MainActivity" />
        </activity>
        <activity
            android:name="dudroid.dudumagicphone.CreateSpellResActivity"
            android:label="@string/title_activity_create_spell_res"
            android:parentActivityName="dudroid.dudumagicphone.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="dudroid.dudumagicphone.MainActivity" />
        </activity>
        <activity
            android:name="dudroid.dudumagicphone.CreateSpellDrawActivity"
            android:label="@string/title_activity_create_spell_draw"
            android:parentActivityName="dudroid.dudumagicphone.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="dudroid.dudumagicphone.MainActivity" />
        </activity>
        <activity
            android:name="dudroid.dudumagicphone.CreateSpellMoveActivity"
            android:label="@string/title_activity_create_spell_move" >
        </activity>
        <activity
            android:name="dudroid.dudumagicphone.BookMenuActivity"
            android:label="@string/title_activity_book_menu"
            android:parentActivityName="dudroid.dudumagicphone.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="dudroid.dudumagicphone.MainActivity" />
        </activity>
    </application>

</manifest>
